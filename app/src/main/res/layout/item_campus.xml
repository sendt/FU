<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/campus_txt1"
            style="@style/txt_style_titles_ranking"
            android:autoSizeTextType="uniform">

        </TextView>

        <TextView
            android:id="@+id/campus_txt2"
            style="@style/txt_style_descp_ranking"
            android:autoSizeTextType="uniform">

        </TextView>

        <TextView
            android:id="@+id/campus_txt3"
            style="@style/txt_style_titles_ranking"
            android:autoSizeTextType="uniform">

        </TextView>

        <TextView
            android:id="@+id/campus_txt4"
            style="@style/txt_style_titles_ranking"
            android:autoSizeTextType="uniform">

        </TextView>

        <TextView
            android:id="@+id/campus_txt5"
            style="@style/txt_style_descp_ranking"
            android:autoSizeTextType="uniform">

        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>