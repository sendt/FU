<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stories_title_name"
            style="@style/txt_style_titles_ranking"
            android:text="@string/student_story">

        </TextView>

        <TextView
            android:id="@+id/storie_names_country"
            style="@style/txt_style_titles_ranking"
            android:text="@string/student_story">

        </TextView>

        <TextView
            android:id="@+id/stories_p1"
            style="@style/txt_style_descp_ranking"
            android:text="@string/student_story">

        </TextView>

        <TextView
            android:id="@+id/stories_p2"
            style="@style/txt_style_descp_ranking"
            android:text="@string/student_story">

        </TextView>

        <TextView
            android:id="@+id/stories_p3"
            style="@style/txt_style_descp_ranking"
            android:text="@string/student_story">

        </TextView>

        <TextView
            android:id="@+id/stories_p4"
            style="@style/txt_style_descp_ranking"
            android:text="@string/student_story">

        </TextView>

        <TextView
            android:id="@+id/stories_p5"
            style="@style/txt_style_descp_ranking"
            android:text="@string/student_story">

        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>